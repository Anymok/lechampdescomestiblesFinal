{% extends 'base.html.twig' %}
{% block body %}

   
        <div class="jumbotron text-center shadow" style=" padding: 2rem 1rem; margin-bottom: 2rem; background-color: #e9ecef; border-radius: .3rem;">
<div class="container mt-4">

    <h2>Ajouter une adresse de livraison</h2>
</div>
</div>
 <div class="container mt-4">
        <h2>{{ app.user.id }}</h2>
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">{{ form_row(form.Rue)}}</div>
            </div>
            <div class="row">
                <div class="col-md-4">{{ form_row(form.CP)}}</div>
            </div>
            <div class="row">
                <div class="col-md-4">{{ form_row(form.Pays)}}</div>
            </div>
            <div class="row">
                <div class="col-md-4">{{ form_row(form.Ville)}}</div>
            </div>
            <div class="row">
                <div class="col-md-4">{{ form_widget(form.user, {'value' : app.user.id ~ ""}) }}</div>
            </div>
            <button class="btn btn-primary mt-4">{{ button|default('Enregistrer') }}</button>
        {{ form_end(form) }}
        <div>
            <a href="{{ path('profil.index') }}" class="mt-3 btn btn-outline-secondary ">Annuler</a>
        </div>
    </div>


{% endblock %}

