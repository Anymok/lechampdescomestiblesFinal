{% extends "base.html.twig" %}

{% block title 'Se connecter' %}

{% block body %}
    <div class="container mt-5 col-sm-3">

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messagedata, 'security') }}
        </div>
    {% endif %}

     {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container " >
        <div class="card text-center text-white bg-dark mb-3 shadow-lg align-items-center">
            <div class="card-body ">
                <h5 class="card-title">Connexion</h5>
                <form action="{{path('login') }}" method="post">
                    <div class="form-group mt-4 text-start">
                        <lavel for="username">Nom d'utilisateur</label>
                        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
                    </div>
                    <div class="form-group mt-3 text-start">
                        <lavel for="password">Mot de passe</label>
                        <input type="password" id="password" name="_password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-success mt-4 ">Se connecter</button>
                </form>
                <a href="{{ path('register') }}" class="mt-3 btn btn-outline-success">S'inscrire</a>
            </div>
        </div>
    </div>
    </div>
{% endblock %}